@model IEnumerable<LibrarySystemMVC.Models.AuthorModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Author Name

        </th>
        <th>
            Author Surname

        </th>
        <th>
            Email
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(model => item.AuthorSurname)

        </td>
        <td>
            @Html.DisplayFor(model => item.AuthorEmail)
        </td>
