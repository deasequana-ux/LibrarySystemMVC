@model IEnumerable<LibrarySystemMVC.Models.BorrowingModel>


@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@foreach (var item in Model)
{
    <div class="form-horizontal">
        <h4>Product Model</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                ISBN No :
                @*@Html.LabelFor(model => model.ISBNNO, htmlAttributes: new { @class = "control-label col-md-2" })*@
                @Html.EditorFor(model => item.BorrowDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.BorrowDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.BookName, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                Book Name :
                @Html.EditorFor(model => item.DueDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.DueDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.PageNumber, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                Page Number :
                @Html.EditorFor(model => item.ReturnDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.ReturnDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NumberOfBook, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                Author Name :
                <select class="form-control" name="name" id="authorName" value=@item.BookInfo.BookName>
                    <option value="0" selected>please select</option>
                </select>
                @Html.ValidationMessageFor(model => item.BookInfo.BookName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NumberOfBook, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                Publisher Name :
                @Html.EditorFor(model => item.PublisherInfo.PublisherName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => item.PublisherInfo.PublisherName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NumberOfBook, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                Publish Year :
                @Html.DisplayFor(model => item.UsersInfo.UserName)
                @Html.ValidationMessageFor(model => item.UsersInfo.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.NumberOfBook, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <div class="col-md-10">
                Publish Year :
                @Html.DisplayFor(model => item.UsersInfo.UserSurname)
                @Html.ValidationMessageFor(model => item.UsersInfo.UserSurname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
        }



    </div>
}
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

