@model IEnumerable<LibrarySystemMVC.Models.BorrowingModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Borrow Date
        </th>
        <th>
            Due Date
        </th>
        <th>
            Return Date 
        </th>
        <th>
            Book Name 
        </th>
        <th>
            User Name 
        </th>
        

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.BorrowDate)
        </td>
        <td>
            @Html.DisplayFor(model => item.DueDate)

        </td>
        <td>
            @Html.DisplayFor(model => item.ReturnDate)
        </td>
        <td>
            @Html.DisplayFor(model => item.Book.BookName)
        </td>

        <td>
            @Html.DisplayFor(model => item.User.UserEmail)
        </td>
        

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
