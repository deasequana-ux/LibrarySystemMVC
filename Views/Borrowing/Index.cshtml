@model IEnumerable<LibrarySystemMVC.Models.BorrowingModel>

@{
    ViewBag.Title = "Index";
}

<h2>Borrow</h2>

<table class="table">
    <tr>
        <th>
            Book Name
        </th>
        <th>
            Borrowing Date
        </th>
        <th>
            Return Date
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(model => item.BorrowDate)
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ReturnDate))
                {
                    @Html.DisplayFor(model => item.ReturnDate);
                }
                else
                {
                   <p> Not return yet </p>
                }
            </td>

            <td>
                @Html.ActionLink("Return", "ReturnBook", "Borrowing", new { BookId = item.BookId.ToString()}, null)
            </td>

        </tr>
    }

</table>

