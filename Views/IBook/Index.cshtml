@model IEnumerable<LibrarySystemMVC.Models.BookModel>

@{
    ViewBag.Title = "Index";
}
<br />
<br />
@*<h2>List Of Book</h2>*@

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

<div class="list-group" style="width: 18rem;">
    <div class="list-body">
        <h5 class="card-title">List of Book</h5>
        @*<h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>*@
        <p class="isbnno">ISBN NO</p>
        <p class="bookname">Book Name</p>
        <p class="pagenumber">Page Number</p>
        <p class="language">Language</p>
        <p class="category">Category</p>
        <p class="numberofbook">Number of Book</p>
        <p class="author">Author</p>
        @*<a href="#" class="card-link">Card link</a>
        <a href="#" class="card-link">Another link</a>*@
    </div>
</div>

<br />
<table class="table">
    <tr>
        <th>
            ISBN No
        </th>
        <th>
            Book Name
        </th>
        <th>
            Page Number
        </th>
        <th>
            Language
        </th>
        <th>
            Category
        </th>
        <th>
            Number Of Book
        </th>
        <th>
            Editor
        </th>
        <th>
            Edition
        </th>
        <th>
            Author
        </th>
        <th>
            Publisher
        </th>
        <th>
            Publish Year
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.ISBNNO)
            </td>
            <td>
                @Html.DisplayFor(model => item.BookName)
            </td>
            <td>
                @Html.DisplayFor(model => item.PageNumber)
            </td>
            <td>
                @Html.DisplayFor(model => item.Language)
            </td>
            <td>
                @Html.DisplayFor(model => item.Category)
            </td>
            <td>
                @Html.DisplayFor(model => item.NumberOfBook)
            </td>
            <td>
                @Html.DisplayFor(model => item.Editor)
            </td>
            <td>
                @Html.DisplayFor(model => item.Edition)
            </td>
            <td>
                @Html.DisplayFor(model => item.Author)
            </td>
            <td>
                @Html.DisplayFor(model => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(model => item.PublishYear)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BookId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookId })
                </td>*@

        </tr>
    }

</table>



