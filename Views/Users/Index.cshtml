@model IEnumerable<LibrarySystemMVC.Models.UsersModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name

        </th>
        <th>
            Surname

        </th>
        <th>
            Phone Number

        </th>
        <th>
            Address

        <th>
            Username

        </th>
        <th>
            Password

        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(model => item.UserSurname)

        </td>
        <td>
            @Html.DisplayFor(model => item.UserPhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(model => item.UserAddress)
        </td>
        <td>
            @Html.DisplayFor(model => item.User_Name)

        </td>
        <td>
            @Html.DisplayFor(model => item.UserPassword)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
            @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
        </td>
    </tr>
}

</table>
